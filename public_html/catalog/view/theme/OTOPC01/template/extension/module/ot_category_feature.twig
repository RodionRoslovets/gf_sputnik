<div class="ot-category-featured">
<div class="customNavigation">
	<a class="btn prev otfcat_prev"></a>
	<a class="btn next otfcat_next"></a>
</div>
<div class="box-heading"><h3>{{ heading_title1 }}</h3></div>
<div class="otfcat-items">
<div class="category-feature ot-carousel">
  {% for category in categories %}
	  <div class="item">
		<div class="content">
		  <div class="image">
			<a href="{{ category.href }}">
				<img src="{{ category.thumb }}" alt="{{ category.name }}" title="{{ category.name }}" class="img-responsive" />
			</a>
		  </div>
		  <div class="caption">
			<div class="cat-title">
				<h4><a href="{{ category.href }}">{{ category.name }}</a></h4>
			</div>
			<div class="cat-sub">
			  {% if category.children %}
			  <ul>
			  {% for child in category.children %}
			  <li><a href="{{ child.href }}" class="list-group-item">{{ child.name }}</a></li>
			  {% endfor %}
			  </ul>
			  {% endif %}
		   </div>
		  </div> <!-- Caption END -->
		</div>
	  </div>
	  		
  {% endfor %}
  			
</div>
</div>
</div>